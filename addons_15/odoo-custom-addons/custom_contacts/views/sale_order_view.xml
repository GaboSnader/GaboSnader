<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="custom_contacts_inherit_res_sale_order" model="ir.ui.view">
      <field name="name">custom_contacts.inherit_sale_order</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside"> 
          <button name="preview_document_expedient" type="object" class="oe_stat_button" icon="fa-address-card-o icon"> 
            <div class="o_field_widget o_stat_info">
              <span class="o_stat_text">Documentos de</span> 
              <span class="o_stat_text">expediente</span> 
            </div>
          </button>
        </xpath>
      </field>
    </record>
  </data>
</odoo>


