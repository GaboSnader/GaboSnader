<odoo>
  <data>
    <record id="custom_contacts_documentos_expediente_view_form" model="ir.ui.view">
      <field name="name">custom_contacts.documentos_expediente_view.form</field>
      <field name="model">custom_contacts.documentos_expediente</field>
      <field name="arch" type="xml">
        <form>
          <header>
              <button name="get_contracts" type="object" string="Generar Contratos" class="btn btn-primary"/>
              <field name="state" widget="statusbar"/>
            </header>
          <sheet>
            <group>
              <group>
                <field name="owner_id" readonly="1"/>
                <field name="partner_id" readonly="1"/>
              </group>
              <group>
                <field name="sale_id" readonly="1"/>
              </group>
            </group>
          </sheet> 
        </form>
      </field>
    </record>

